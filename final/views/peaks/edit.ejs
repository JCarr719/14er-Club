<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h1 style="text-align: center;">Edit <%= peak.name %></h1>
            <div style="width: 30%; margin: 75px auto;">
            <form action="/peaks/<%= peak._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="peak[name]" value="<%= peak.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="peak[location]" value="<%= peak.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="peak[image]" value="<%= peak.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="peak[description]" value="<%= peak.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-success btn-block">Submit</button>
                </div>
            </form>
                <a href="/peaks">Go Back</a>
            </div>
    </div>
</div>
<% include ../partials/footer %>