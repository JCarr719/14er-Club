<% include ../partials/header %>
    
    <div class="container">
            <header class="jumbotron">
                <div class="container">
                    <h1>14er Club</h1>
                <p>A collection of Colorado high altitude experiences</p>
                <p>
                     <a class="btn btn-success btn-lg" href="/peaks/new">Add your 14er experience!</a>
                </p>
                </div>
            </header>
            
        <div class="row">
            <div class="col-lg-12">
                <h3>Most Mentioned Mountains</h3>
            </div>
        </div>
        
           <div class="row text-center" style="display: flex; flex-wrap: wrap;">
                      <% peaks.forEach(function(site){ %>
                    <div class="col-md-3 col-sm-6">
                      <div class="thumbnail">
                           <img src="<%= site.image %>">
                        <div class="caption">
                            <h4><%= site.name %></h4>
                        </div>
                        <p>
                            <a href="/peaks/<%= site._id%>" class="btn btn-success">More Info</a>
                        </p>
                      </div>
                    </div>
            <% }); %>
           </div>
     
        
        <% include ../partials/footer %>

    </div>